<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.workingimage"
             Title="workingimage">
    <StackLayout>
        <Label 
               FontFamily="myfont"
               FontSize="50"
               Text="External resource"
               TextColor="Black">
        </Label>
        <Grid BackgroundColor="Black">
            <Image IsAnimationPlaying="True" Source="loader"></Image>
        </Grid>

        <Image>
            <Image.Source>
                <FontImageSource
                    FontFamily="Icons"
                    Glyph="&#xF09E;"
                    Size="50"/>
            </Image.Source>
        </Image>
    </StackLayout>
</ContentPage>